<div class="row">
  <div class="col-md-12" style="margin-top:15px;">
    <form class="form-inline">
      <div class="form-group mb-2 col-xs-12 col-sm-12 col-md-2 col-lg-2">
        <!-- <label for="staticEmail2" class="sr-only">Email</label> -->
        <input type="text" class="form-control-plaintext" id="txtSearch" placeholder="Search" aria-label="Search" style="border: 1px solid #f3f3f3">
      </div>
      <button type="button" class="btn btn-primary mb-2 btnSearch">Search</button>
    </form>
    <!-- <input class="form-control mr-sm-2" id="txtSearch" type="search" placeholder="Search" aria-label="Search">
    <button class="btn btn-success my-2 my-sm-0 btnSearch"  type="button">Search</button> -->
  </div>
  <div class="col-md-3 col-lg-3">
      <!-- 
          <ul class="deque-hierarchical-menu">
              <li>
                  <button>
                  <ul>
                      <li>
                      <li>
                  </ul>
              </li>
          </ul>
       -->
      <div class="btxHierarchicalMenu">
          <%- partial('partials/menu', {files: files, allFlatFiles: allFlatFiles}) %>
      </div>
  </div>
  <div class="col-md-8 col-lg-8 bxEditBox" style="display:none;">
      <h6 class="txtFileHeader"></h6>
      <textarea id="fileContent"></textarea>
      <div class="row" style="margin-top: 15px;">
          <div class="col-md-12">
              <button type="button" class="btn btn-success btn-lg btnSaveContent pull-left" data-fileid=''>Save</button>
          </div>
      </div>
  </div>
  <div class="col-md-8 col-lg-8 bxWelcomeBox" style="<%= files.length <= 0 ? '':'display:none;' %>">
    <p>Welcome <%= user.firstName %>! Seems like you don't have any documents created or opened. Please create one using button in top left corner or open one that you would like to read or edit!</p>
  </div>
  <div class="col-md-8 col-lg-8 bxInstructionBox" style="<%= files.length > 0 ? '':'display:none;' %>">
    <br/>
    <p>Right click on file/folder for more options.</p>
  </div>
</div>
<!-- Naming modal -->
<div class="modal" tabindex="-1" role="dialog" id="fileNameModal">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Enter File/Folder Name</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <input type="text" class="form-control" placeholder="name" id="textFileFolderName" />
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary float-left" data-dismiss="modal">Close</button>
          <button type="button" class="btn btn-primary btnSaveChanges">Save changes</button>
        </div>
      </div>
    </div>
  </div>